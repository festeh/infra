[Unit]
Description=Miniflux Feed Reader
After=network-online.target postgresql.service

[Service]
User={{ miniflux_user }}
ExecStart=/usr/local/bin/miniflux -config-file /etc/miniflux.conf
Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log

[Install]
WantedBy=multi-user.target
